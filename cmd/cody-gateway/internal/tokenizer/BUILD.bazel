go_test(
    name = "tokenizer_test",
    srcs = ["tokenizer_test.go"],
    deps = [
        ":tokenizer",
        "//vendor/github.com/hexops/autogold/v2:autogold",
        "//vendor/github.com/stretchr/testify/require",
    ],
)
