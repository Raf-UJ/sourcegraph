    name = "tokenizer",
    srcs = [
        "claude.go",
        "tokenizer.go",
    ],
    embedsrcs = ["claude.json"],
    importpath = "github.com/sourcegraph/sourcegraph/cmd/cody-gateway/internal/tokenizer",
    visibility = ["//cmd/cody-gateway:__subpackages__"],
