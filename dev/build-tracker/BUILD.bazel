load("//dev:go_defs.bzl", "go_test")
load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

go_library(
    name = "build-tracker_lib",
    srcs = ["main.go"],
    importpath = "github.com/sourcegraph/sourcegraph/dev/build-tracker",
    visibility = ["//visibility:private"],
    deps = [
        "//dev/build-tracker/build",
        "//dev/build-tracker/config",
        "//dev/build-tracker/notify",
        "//vendor/github.com/gorilla/mux",
        "//vendor/github.com/sourcegraph/log",
        "//vendor/github.com/sourcegraph/sourcegraph/lib/errors",
    ],
)

go_binary(
    name = "build-tracker",
    embed = [":build-tracker_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "build-tracker_test",
    timeout = "short",
    srcs = [
        "integration_test.go",
        "main_test.go",
        "server_test.go",
    ],
    embed = [":build-tracker_lib"],
    deps = [
        "//dev/build-tracker/build",
        "//dev/build-tracker/config",
        "//dev/build-tracker/notify",
        "//dev/team",
        "//vendor/github.com/buildkite/go-buildkite/v3/buildkite",
        "//vendor/github.com/gorilla/mux",
        "//vendor/github.com/sourcegraph/log/logtest",
        "//vendor/github.com/stretchr/testify/require",
    ],
)
