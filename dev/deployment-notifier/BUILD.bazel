load("//dev:go_defs.bzl", "go_test")
load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

go_library(
    name = "deployment-notifier_lib",
    srcs = [
        "deployment_notifier.go",
        "main.go",
        "manifest_differ.go",
        "slack.go",
        "trace.go",
    ],
    importpath = "github.com/sourcegraph/sourcegraph/dev/deployment-notifier",
    visibility = ["//visibility:private"],
    deps = [
        "//dev/team",
        "//vendor/github.com/google/go-github/v55/github",
        "//vendor/github.com/grafana/regexp",
        "//vendor/github.com/honeycombio/libhoney-go",
        "//vendor/github.com/honeycombio/libhoney-go/transmission",
        "//vendor/github.com/slack-go/slack",
        "//vendor/github.com/sourcegraph/log",
        "//vendor/github.com/sourcegraph/sourcegraph/lib/errors",
        "//vendor/golang.org/x/oauth2",
    ],
)

go_binary(
    name = "deployment-notifier",
    embed = [":deployment-notifier_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "deployment-notifier_test",
    timeout = "short",
    srcs = [
        "deployment_notifier_test.go",
        "manifest_differ_test.go",
        "trace_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":deployment-notifier_lib"],
    deps = [
        "//internal/httptestutil",
        "//vendor/github.com/dnaeon/go-vcr/cassette",
        "//vendor/github.com/google/go-github/v55/github",
        "//vendor/github.com/sourcegraph/sourcegraph/lib/errors",
        "//vendor/github.com/sourcegraph/sourcegraph/lib/pointers",
        "//vendor/github.com/stretchr/testify/assert",
        "//vendor/github.com/stretchr/testify/require",
        "//vendor/golang.org/x/oauth2",
    ],
)
