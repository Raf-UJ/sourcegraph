go_test(
    name = "luasandbox_test",
    timeout = "short",
    srcs = ["sandbox_test.go"],
    embed = [":luasandbox"],
    deps = [
        "//internal/luasandbox/util",
        "//internal/observation",
        "//vendor/github.com/google/go-cmp/cmp",
        "//vendor/github.com/yuin/gopher-lua",
    ],
